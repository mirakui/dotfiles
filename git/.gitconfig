[user]
	name = Issei Naruta
	email = 20384+mirakui@users.noreply.github.com
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
  grep = auto
[alias]
  co = checkout
  st = status
  di = diff
  br = branch
  show-root = rev-parse --show-toplevel
  stat = log --stat
  ca = commit -va
[core]
	editor = nvim
	pager = less
	excludesfile = ~/.gitignore_global
	sparsecheckout = true
[hub]
	host = ghe.ckpd.co
[github "ghe.ckpd.co"]
	user = issei-naruta
[alias]
	recent = "!$SHELL -c ' \n\
    n=1 \n\
    1=\"${1:-$n}\" \n\
    git --no-pager log --since=\"$1\".days --author=\"`git config user.name`\" --pretty=format:\"%h - %ar : %s\" --branches --reverse\n\
    ' __dummy__"
  fetch-pulls = "fetch origin +refs/pull/*:refs/remotes/pull/*"
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = simple
  autoSetupRemote = true
[merge "mergepbx"]
	name = Xcode project files merger
	driver = mergepbx %O %A %B
	note = auto-generated configuration by cpad2 upgrade
[ghq]
  root = ~/src
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[rebase]
	autostash = true
	abbreviateCommands = true
	autosquash = true
[credential]
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
[commit]
	gpgsign = true
[gpg]
	program = /usr/local/MacGPG2/bin/gpg2
[init]
	defaultBranch = main
